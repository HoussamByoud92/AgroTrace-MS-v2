# Docker Environment Configuration
# This file is used when running in Docker

# Server Configuration
HOST=0.0.0.0
PORT=8003
ENVIRONMENT=production

# YOLO Model Configuration
MODEL_PATH=/app/model/best.pt
CONF_THRESHOLD=0.4
IOU_THRESHOLD=0.45
IMG_SIZE=640
DEVICE=cpu
MAX_DETECTIONS=300

# Kafka Configuration (will be overridden by docker-compose)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_DISEASE_DETECTION=disease-detection-topic
KAFKA_TOPIC_IMAGE_TILES=image-tiles-topic

# Storage Configuration
UPLOAD_DIR=./uploads
RESULTS_DIR=./results
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=INFO
